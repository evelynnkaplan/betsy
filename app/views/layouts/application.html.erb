<!DOCTYPE html>
<html>
  <head>
    <title>SecrEtsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" media="screen" href="https://fontlibrary.org/face/beon" type="text/css"/>
  </head>

  <body>
    
    <nav>
      <ul>
        <li><%= link_to "View all products", products_path %></li>
        <li class = 'logo'>
          <h1 id="neon-tubing"><span>S</span>ecr<span>E</span>t<span>s</span>y</h1>
        </li>
        <% if session[:merchant_id] %>
          <li><%= link_to "Log out", logout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Login with Github", github_login_path %></li>
        <% end %>
      </ul>
    </nav>

      <% alert_type = flash[:status] == :error ? :danger : flash[:status] %>
      <section class="flash alert alert-<%= alert_type %>">
        <%= flash[:message] %>
      </section>

    
    <%= yield %>
  
  </body>
</html>
