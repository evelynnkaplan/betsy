<header>
  <h2><%= @product.name %></h2>
</header>

<main>
  <img src="<%= @product.img_url %>">

  <section>
    <ul>
      <li>Sold by <%= link_to "#{@product.merchant.username}", merchant_path(@product.merchant) %></li>
      <li>$ <%= @product.price %></li>
    </ul>
  </section>

  <p><%= @product.description %></p>

    <%# form with hidden fields to add item to shopping cart %>
 
  <p><%= @product.name %> | <%= number_to_currency @product.price %>
  <%= form_for @order_item do |f| %>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.number_field :quantity %>
    <%= f.submit "Add to cart" %>
  <% end %></p>

</main>

