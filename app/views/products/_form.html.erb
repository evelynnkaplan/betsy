<%= form_with model: @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.label :stock %>
  <%= f.text_field :stock %>

  <%= f.label "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
    <%= b.check_box %>
    <%= b.label %>
  <% end %>
  <!-- put category field here -->

  <%= f.submit "#{submit_title}", url: submit_url, method: submit_method %>
<% end %>

  