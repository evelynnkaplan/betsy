<%= form_with model: @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.label :stock %>
  <%= f.text_field :stock %>

  <%= f.label "Categories", :categories %>
  <%= collection_check_boxes :product, :category_ids, Category.all, :id, :name %>

  <%= f.submit "#{submit_title}", url: submit_url, method: submit_method %>
<% end %>

  