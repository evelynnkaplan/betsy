<%= form_for @order, method: :patch do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email, :required => true, :placeholder => "name@example.com" %>

  <%= f.label :address %>
  <%= f.text_field :address, :required => true, :placeholder => "123 Example St, Seattle WA" %>

  <%= f.label :mailing_zip %>
  <%= f.text_field :mailing_zip, :required => true, :pattern => '\d{5}', :placeholder => "5-digit zip" %>

  <%= f.label :name_on_card %>
  <%= f.text_field :name_on_card, :required => true, :placeholder => "First and Last" %>

  <%= f.label :credit_card %>
  <%= f.text_field :credit_card, :required => true, :pattern => '\d{16}', :placeholder => "No spaces ####" %>

  <%= f.label :card_exp %>
  <%= f.text_field :card_exp, :required => true, :placeholder => "MM/YYYY"  %>

  <%= f.label :cvv %>
  <%= f.text_field :cvv, :required => true, :pattern => '\d{3}', :placeholder => "3-digits"%>

  <%= f.label :billing_zip %>
  <%= f.text_field :billing_zip, :required => true, :pattern => '\d{5}', :placeholder => "5 digit-zip" %>

  <%= f.submit "Submit Order" %>

<% end %>
  
